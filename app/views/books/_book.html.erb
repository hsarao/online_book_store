<style>
  .style{
    float: left;
    border-style: ridge;
    padding-left: 5px;
    margin-left: 10px;

  }
    h3{
      padding-top: 9px;
    }

</style>

<%= div_for(book, :class => "style" ) do %>
  <h3><%= book.name %><br></h3>
  <%= image_tag(book.image, style:'height:200px;width:150px;align:center')%><br><br>
  <strong><p>Author: <%= book.author %></p></strong>
  <strong><p>Rating: <%= book.rating %></p></strong>
  <p><%= book.genre.name %></p>
  <% if show_details_link %>
  <p><%= link_to 'View Details', book %></p>
    <% if session[:to_cart].include?(book.id) %>
      <p><%= link_to 'Remove Book', mark_as_added_book_path(book), method: :post %></p>
      <% else %>
      <p><%= link_to 'Add to cart', add_to_cart_book_path(book), remote: true, method: :post %></p>
      <% end %>

  <% end %>
<% end %>



