<style>
  .style{
    float: left;
    border-style: ridge;
    padding-left: 5px;
    margin-left: 10px;

  }
    h3{
      padding-top: 9px;
    }

</style>

<%= div_for(book, :class => "style" ) do %>
  <h3><%= book.name %><br></h3>
  <%= image_tag(book.image.thumb.url)%><br><br>

  <strong><p>Author: <%= book.author %></p></strong>
  <strong><p>Rating: <%= book.rating %></p></strong>
  <p><%= book.genre.name %></p>
  <p>Price: $<%= book.price %></p>
  <div id="test"></div>
  <% if show_details_link %>
  <p><%= link_to 'View Details', book %></p>
    <% if session[:to_cart].include?(book.id) %>
      <% else %>
      <% end %>
    <p id="add_cart"><%= link_to 'Add to cart', add_to_cart_book_path(book), remote: true, method: :post %></p>
  <% end %>
  <% if book.sale? %>
    <img src="assets/sale.png" height="40px">
  <% end %>
  <% if book.new? %>
    <img src="assets/new.png" height="40px">
  <% end %>
  <div id="See"></div>
<% end %>



